                    {{#if loggedIn}}
                    <li>
                        <button id="logout" class="btn-no-style">Logout</button>
                        {{else}}
                    </li>
                    <li>
                        <a href="/login">Login/Sign-up</a>
                    </li>
                    {{/if}}
                </ol>
            </nav>
        </header>
        <main>
            {{{ body }}}
        </main>
        <footer>
            Tech is the future! 
        </footer>
    </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}

</body>

</html>