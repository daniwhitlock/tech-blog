<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
        Created on {{format_date created_at}}
        |
        <div> {{comments.length}} {{format_plural "comment" comments.length}}</div>
        <div>
            Created by {{user.username}}
        </div>
    </div>
    <div class="content">{{content}}

    </div>
</article>