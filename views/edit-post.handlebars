<a class="pre-header" href="/dashboard"> &larr; Back to Dashboard</a>
<div class="page-header">
  <h2>
    Edit Post
  </h2>
</div>
<article class="center">
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input class="input-padding" name="post-title" type="text" value="{{post.title}}" />
      <br>
      <div class="extra-padding"></div>
      <label for="post-content">Content</label>
      <input class="input-padding" name="post-content" type="text" value="{{post.content}}" />
    </div>
    <div class="extra-padding"></div>
    <div>
      Created on {{format_date post.created_at}}
      |
      <a class="pre-header" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
        post.comments.length}}</a>
    </div>
    <button class="btn padding-btn" type="submit">Save Post</button>

    <button class="delete-btn padding-btn" type="button">Delete Post</button>
  </form>
  <div class="extra-padding"></div>
  <div class="extra-padding"></div>

  <form class="comment-form">
    <div>
      <textarea class="input-padding" name="comment-body"></textarea>
    </div>

    <div>
      <button class="btn" type="submit">Add Comment</button>
    </div>
  </form>
</article>

<div class="page-header left">
  <h2>
    Comments
  </h2>
</div>
<article class="center">
  {{> comments post.comments}}
</article>




<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>